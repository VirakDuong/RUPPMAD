<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="130dp">
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_default_image"
        android:id="@+id/img_assigment_thumnail"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:id="@+id/txt_assigment_title"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/img_assigment_thumnail"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deadline"
        android:id="@+id/txt_deadline"
        android:layout_toRightOf="@id/img_assigment_thumnail"
        android:layout_marginTop="10dp"
        android:layout_below="@id/txt_assigment_title"/>

</RelativeLayout>